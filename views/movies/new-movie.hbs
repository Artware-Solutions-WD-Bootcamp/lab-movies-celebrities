<h2> Add a new movie to the list</h2>

<form method="POST" action="/movies/create">

    <div>
        <label for="title" class="form-label">Title:</label>
        <input type="text" name="title" >
    </div>

    <div>
        <label for="genre" class="form-label">Genre:</label>
        <input type="text" name="genre">
    </div>

    <div>
        <label for="plot" class="form-label">Plot:</label>
        <input type="text" name="plot">
    </div>

    <div>
        <label for="cast">Select a Celebrity:
            <select name="cast" multiple>
                {{#each celebList}}
                    <option value={{this._id}}>{{this.name}}</option>
                {{/each}}
            </select>
        </label>
    </div>

    <button class="btn btn-outline-success">Add Movie</button>

</form>