<h2 class="card-margin">Update Movie</h2>

<form method="POST" action="/movies/{{movieQuery._id}}/edit">

    <div>
        <label for="title" >Title:</label>
        <input type="text" name="title" value = "{{movieQuery.title}}" >
    </div>

    <div>
        <label for="genre" >Genre:</label>
        <input type="text" name="genre" value = "{{movieQuery.genre}}">
    </div>

    <div>
        <label for="plot" >Plot:</label>
        <input type="text" name="plot" value = "{{movieQuery.plot}}" >
    </div>

    <div>
        <label for="cast">Select a Celebrity:
            <select name="cast" multiple>
                {{#each celebList}}
                    <option value={{this._id}}>{{this.name}}</option>
                {{/each}}
            </select>
        </label>
    </div>


    <button class="btn btn-outline-success">Update Movie</button>


</form>