<div class="d-flex flex-row-reverse">
  <div class="column">
    <div class="row">
      <h2>Update Movie Details</h2>
    </div>
    <div class="row">

      <form method="POST" action="/movies/{{movieQuery._id}}/edit">

        <div class="mb-3">
          <label class="form-label" for="title">Title:</label>
          <input class="form-control" type="text" name="title" value="{{movieQuery.title}}" />
        </div>

        <div class="mb-3">
          <label class="form-label" for="genre">Genre:</label>
          <input class="form-control" type="text" name="genre" value="{{movieQuery.genre}}" />
        </div>

        <div class="mb-3">
          <label class="form-label" for="plot">Plot:</label>
          <input class="form-control" type="text" name="plot" value="{{movieQuery.plot}}" />
        </div>

        <div class="mb-3">
          <label class="form-label" for="cast">Select a Celebrity:
            <select class="form-control" name="cast" multiple>
              {{#each celebList}}
                <option value={{this._id}}>{{this.name}}</option>
              {{/each}}
            </select>
          </label>
        </div>

        <button class="btn btn-outline-success">Update Movie</button>

      </form>
    </div>
  </div>
</div>