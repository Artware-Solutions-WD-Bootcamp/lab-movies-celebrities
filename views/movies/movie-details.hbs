<div class="d-flex flex-row-reverse">
  <div class="column">
    <div class="row">
      <h2>Details of the movie</h2>
    </div>
    <div class="row">
      <h4><b>Title:</b> {{movieQuery.title}}</h4>
    </div>
    <div class="row">
      <p><b>Genre:</b> {{movieQuery.genre}}</p>
    </div>
    <div class="row">
      <p><b>Plot:</b> {{movieQuery.plot}}</p>
    </div>
    <div class="row">
      <ul>
        {{#each movieQuery.cast}}
          <li><b>Actor:</b>{{this.name}} <br> <b>Occupation:</b> {{this.occupation}} <br> <b>Catch Phrase:</b> {{this.catchPhrase}}</li>
        {{/each}}
      </ul>
    </div>
    <div class="row">
      <div class="col-2">
        <a class="card-link" href="/movies/{{movieQuery._id}}/edit">
          <button class="btn btn-outline-info">Update Movie</button>
        </a>
      </div>

      <div class="col-2">
        <form
          class="card-link"
          method="POST"
          action="/movies/{{movieQuery._id}}/delete"
        >
          <button class="btn btn-outline-danger">Delete Movie</button>
        </form>
      </div>

    </div>
  </div>
</div>