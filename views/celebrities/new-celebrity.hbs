<div class="d-flex flex-row-reverse">
  <div class="column">
    <div class="row">
      <h2> Add a new celebrity to the list</h2>
    </div>
    <div class="row">
      <form method="POST" action="/celeb/create">

        <div class="mb-3">
          <label class="form-label" for="name">Name:</label>
          <input class="form-control" name="name" type="text"/>
        </div>

        <div class="mb-3">
          <label class="form-label" for="occupation">Occupation:</label>
          <input class="form-control" name="occupation" type="text"/>
        </div>

        <div class="mb-3">
          <label class="form-label" for="catchPhrase">Catch Phrase:</label>
          <input class="form-control" name="catchPhrase" type="text"/>
        </div>

        <button class="btn btn-primary">Add Celebrity</button>

      </form>
    </div>
  </div>
</div>